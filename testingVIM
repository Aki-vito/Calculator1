#include<iostream>

using namespace std;
int main(){
char Operation;
float n1, n2;
while(2 == 2){
cout << "Insert the operation sign(+,-,*,/) and the 2 numbers: " << endl;
cin >> n1 >> Operation >> n2;
switch(Operation){
case '+':
				cout << n1 + n2 << endl;
				break;
case '-':
				cout << n1 - n2 << endl;
				break;
case '*':
				cout << n1 * n2 << endl;
				break;
case '/':
				cout << n1 / n2 << endl;
				break;
default:
       cout << "Error!Please check what you have written again.." << endl;
			 break;
}
}
return 0;
}
